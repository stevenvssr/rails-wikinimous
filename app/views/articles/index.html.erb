<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <a class="navbar-brand" href="http://localhost:3000/">Articles <i class="far fa-newspaper"></i></a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
      <li class="nav-item active">
        <button type="button" class="btn btn-dark btn-lg"><%= link_to "Add a new article", "http://localhost:3000/articles/new" %></button>
      </li>
    </ul>
  </div>
</nav>


<div class="grid">
<% @articles.each do |article| %>
<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title"><%= link_to article.title, article_path(article) %></h5>
    <p class="card-text"> <%= article.content %> </p>
  </div>
</div>
<% end %>
</div>

<hr/>
